<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hxb.mapper.EmployeeMapper">
	<!-- public Employee getEmpById(Integer id); -->
	<select id="getEmpById" resultType="com.hxb.bean.Employee">
		SELECT * FROM tb_employee WHERE id=#{id}
	</select>
	
	<!-- public void insertEmp(Employee employee); -->
	<insert id="insertEmp">
		INSERT INTO tb_employee(lastName, email, gender, d_id) values(#{lastName},#{email},#{lastName},#{gender},#{d_id})
	</insert>
</mapper>

































