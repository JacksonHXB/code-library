<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="
    	http://www.springframework.org/schema/beans 
    	http://www.springframework.org/schema/beans/spring-beans.xsd">
	
	<!-- 注册目标对象 -->
	<bean id="someService" class="com.hxb.aop06.SomeServiceImpl" />

	<!-- 注册切面：前置通知 -->
	<bean id="myBeforeAdvice" class="com.hxb.aop06.MyMethodBeforeAdvice"/>
	<!-- 注册切面：后置通知 -->
	<bean id="myAfterAdvice" class="com.hxb.aop06.MyAfterReturningAdvice"/>
	
	<!-- 生成代理对象 -->
	<bean id="serviceProxy" class="org.springframework.aop.framework.ProxyFactoryBean">
		<property name="target" ref="someService" />
		<!-- 注入两种通知 ,方式一
			<property name="interceptorNames">
				<array>
					<value>myBeforeAdvice</value>
					<value>myAfterAdvice</value>
				</array>
			</property>
		-->
		<!-- 注入两种通知，方式二 -->
		<property name="interceptorNames" value="myBeforeAdvice,myAfterAdvice"/>
	</bean>
</beans>




















































