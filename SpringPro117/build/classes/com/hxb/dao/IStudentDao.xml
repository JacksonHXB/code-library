<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hxb.dao.IStudentDao">
	<!-- 增加学生 -->
	<insert id="insertStudent">
		insert into tb_student(name,age) values(#{name}, #{age})
	</insert>
	
	<!-- 删除学生 -->
	<delete id="deleteStudentById">
		delete from tb_student where id=#{id}
	</delete>
	
	<!-- 修改学生 -->
	<update id="updateStudent">
		update tb_student set name=#{name}, age=#{age} where id=#{id}
	</update>
	
	<!-- 查询所有学生 -->
	<select id="queryAll" resultType="Student">
		select id,name,age from tb_student
	</select>
	
	<!-- 根据ID查询学生 -->
	<select id="selectStudentById" resultType="Student">
		select id,name,age from tb_student where id=#{id}
	</select>
</mapper>
































