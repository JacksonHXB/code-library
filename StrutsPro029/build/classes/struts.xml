<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
	"-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
	"http://struts.apache.org/dtds/struts-2.3.dtd">
<struts>
	<!-- 也可以在这里进行常量设置:请求后缀名设置 -->
	<constant name="struts.action.extension" value="go" />
	<package name="xxx" namespace="/test" extends="struts-default">
		<!-- 这里会自动执行LoginAction.execute()函数 -->
		<action name="login" class="com.hxb.actions.LoginAction">
			<result name="success">/welcome.jsp</result>
		</action>
	</package>
</struts>

































































































