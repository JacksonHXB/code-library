<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.hxb.beans">
	<class name="Student" table="tb_student" lazy="true"><!-- 这里延迟加载是默认值，如果为false，load的延迟加载将会失效 -->
		<id name="id" column="tid">
			<generator class="native" />
		</id>
		<property name="name" column="tname" />
		<property name="age" column="tage" />
		<property name="score" column="tscore" />
	</class>
</hibernate-mapping>













































































