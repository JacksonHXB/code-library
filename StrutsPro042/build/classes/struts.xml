<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
	"-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
	"http://struts.apache.org/dtds/struts-2.3.dtd">
<struts>
	<package name="xxx" namespace="/test" extends="struts-default">
		<action name="login" class="com.hxb.actions.LoginAction">
			<!-- redirectActin重定向到另一个Action -->
			<result type="redirectAction">
				<!-- 这里的标准是不需要添加*.action -->
				<param name="actionName">second</param>
				<param name="uname">${name}</param>
				<param name="uage">${age}</param>
			</result>
		</action>
		<action name="second" class="com.hxb.actions.SecondAction">
			<result>/welcome.jsp</result>
		</action>
	</package>
</struts>

































































































