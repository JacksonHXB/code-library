<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="
    	http://www.springframework.org/schema/beans 
    	http://www.springframework.org/schema/beans/spring-beans.xsd">
   	<!-- 异类抽象Bean -->
	<bean id="baseBean" abstract="true">
		<property name="school" value="清华大学" />
		<property name="department" value="计算机系" />
	</bean>
	
	<bean id="myStudent" class="com.hxb.di12.Student" parent="baseBean">
		<property name="name" value="张三"/>
		<property name="age" value="35" />
	</bean>
	
	<bean id="myTeacher" class="com.hxb.di12.Teacher" parent="baseBean">
		<property name="name" value="Tom"/>
		<property name="workAge" value="12" />
	</bean>
	
</beans>




















































