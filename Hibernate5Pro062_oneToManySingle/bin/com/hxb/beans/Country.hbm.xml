<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.hxb.beans">
	<class name="Country">
		<id name="cid">
			<generator class="native" />
		</id>
		<property name="cname"/>
		<set name="ministers" cascade="save-update"><!-- cascade可用于级联保存 -->
			<key column="countryId"/><!-- 当前类的主键对应多方（Minister）的外键 -->
			<one-to-many class="Minister"/><!-- 一个国家对应多个部长 -->
		</set>
	</class>
</hibernate-mapping>











































































































































